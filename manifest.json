{
	"manifest_version": 2,
	"name": "SHC Helper",
	"version": "0.1",
	"permissions": [
		"cookies",
		"tabs",
		"notifications"
	],
	"page_action": {
		"default_icon": "shcHelperIcon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://jira.intra.sears.com/*"
			],
			"css": ["shcHelper.css"],
			"js": ["jiraHelper.js"]
		},
		{
			"matches": [
				"http://*.sears.com/*",
				"http://*.kmart.com/*",
				"https://*.sears.com/*",
				"https://*.kmart.com/*"
			],
			"css": ["shcHelper.css"],
			"js": ["snkHelper.js"]
		}
	],
	"background": {
    	"scripts": ["shcHelper.js"],
    	"persistent": false
  	}
}