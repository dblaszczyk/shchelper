{
	"manifest_version": 1,
	"name": "SHC Helper",
	"version": "0.1",
	"permissions": [
		"cookies",
		"tabs",
		"notifications"
	],
	"page_action": {
		"default_icon": "shcHelperIcon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://jira.intra.sears.com/*"
			],
			"css": ["shcHelper.css"],
			"js": ["jiraHelper.js"]
		},
		{
			"matches": [
				"http://*.sears.com/*",
				"http://*.kmart.com/*",
			],
			"css": ["shcHelper.css"],
			"js": ["snkHelper.js"]
		}
	]
}